	<files>
		<filename plugin="chimpyourjoomlapro">chimpyourjoomlapro.php</filename>
		<folder>includes</folder>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_chimpyourjoomlapro.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_chimpyourjoomlapro.sys.ini</language>
